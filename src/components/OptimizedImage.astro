---
import { Image } from 'astro:assets';

interface Props {
  src: ImageMetadata;
  alt: string;
  class?: string;
  widths?: number[];
  sizes?: string;
  loading?: 'lazy' | 'eager';
}

const {
  src,
  alt,
  class: className = '',
  widths = [400, 800, 1200],
  sizes = '(max-width: 768px) 100vw, 50vw',
  loading = 'lazy'
} = Astro.props;
---

<Image
  src={src}
  alt={alt}
  widths={widths}
  sizes={sizes}
  loading={loading}
  class={className}
  format="webp"
  quality={80}
/>

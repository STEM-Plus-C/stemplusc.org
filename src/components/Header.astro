---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/programs', label: 'Programs' },
  { href: '/sponsors', label: 'Sponsors' },
  { href: '/donate', label: 'Donate' },
  { href: '/contact', label: 'Contact' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="max-w-6xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <img src="/logo.png" alt="STEM+C Creative Robotics" class="h-12 w-auto" />
      </a>

      <!-- Desktop Navigation -->
      <ul class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={[
                "text-sm font-medium transition-colors hover:text-brand-blue",
                currentPath === item.href ? "text-brand-blue" : "text-navy"
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>

      <!-- CTA Button -->
      <a
        href="/donate"
        class="hidden md:inline-block bg-brand-red text-white px-5 py-2 rounded-lg font-medium hover:bg-red-800 transition-colors"
      >
        Support Us
      </a>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-navy"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t pt-4">
      <ul class="flex flex-col gap-4">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={[
                "block text-sm font-medium transition-colors hover:text-brand-blue",
                currentPath === item.href ? "text-brand-blue" : "text-navy"
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
        <li class="pt-2">
          <a
            href="/donate"
            class="inline-block bg-brand-red text-white px-5 py-2 rounded-lg font-medium hover:bg-red-800 transition-colors"
          >
            Support Us
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>

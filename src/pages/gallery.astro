---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

// Import images by category
const galleryImages = import.meta.glob<{ default: ImageMetadata }>(
  '../assets/images/gallery/*.{jpg,jpeg,png,webp}',
  { eager: true }
);
const teamImages = import.meta.glob<{ default: ImageMetadata }>(
  '../assets/images/team/*.{jpg,jpeg,png,webp}',
  { eager: true }
);
const robotImages = import.meta.glob<{ default: ImageMetadata }>(
  '../assets/images/robots/*.{jpg,jpeg,png,webp}',
  { eager: true }
);

const getImages = (imports: Record<string, { default: ImageMetadata }>) => {
  return Object.entries(imports).map(([path, module]) => ({
    src: module.default,
    alt: path.split('/').pop()?.replace(/\.(jpg|jpeg|png|webp)$/, '').replace(/[-_]/g, ' ') || 'Photo',
  }));
};

const gallery = getImages(galleryImages);
const team = getImages(teamImages);
const robots = getImages(robotImages);

const categories = [
  { id: 'all', label: 'All Photos' },
  { id: 'team', label: 'Team' },
  { id: 'robots', label: 'Robots' },
  { id: 'gallery', label: 'Highlights' },
];
---

<BaseLayout title="Gallery" description="Photos from STEM+C robotics competitions, build season, and community events.">
  <!-- Hero -->
  <section class="bg-navy text-white py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-white">Gallery</h1>
      <p class="text-xl text-gray-200 max-w-2xl">
        Our journey in photosâ€”from build season to competition day.
      </p>
    </div>
  </section>

  <!-- Filter Tabs -->
  <section class="bg-gray-50 border-b sticky top-[72px] z-40">
    <div class="max-w-6xl mx-auto px-4">
      <div class="flex gap-2 py-4 overflow-x-auto">
        {categories.map((cat) => (
          <button
            class="filter-btn px-4 py-2 rounded-full text-sm font-medium transition-colors whitespace-nowrap"
            data-filter={cat.id}
          >
            {cat.label}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4">
      <!-- Team Section -->
      {team.length > 0 && (
        <div class="gallery-section mb-16" data-category="team">
          <h2 class="text-2xl font-bold text-navy mb-6">Team</h2>
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {team.map((image) => (
              <figure class="gallery-item group relative overflow-hidden rounded-xl bg-gray-100 aspect-[4/3]" data-category="team">
                <Image
                  src={image.src}
                  alt={image.alt}
                  widths={[400, 600, 800]}
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  format="webp"
                  quality={80}
                  loading="lazy"
                />
              </figure>
            ))}
          </div>
        </div>
      )}

      <!-- Robots Section -->
      {robots.length > 0 && (
        <div class="gallery-section mb-16" data-category="robots">
          <h2 class="text-2xl font-bold text-navy mb-6">Robots</h2>
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {robots.map((image) => (
              <figure class="gallery-item group relative overflow-hidden rounded-xl bg-gray-100 aspect-[4/3]" data-category="robots">
                <Image
                  src={image.src}
                  alt={image.alt}
                  widths={[400, 600, 800]}
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  format="webp"
                  quality={80}
                  loading="lazy"
                />
              </figure>
            ))}
          </div>
        </div>
      )}

      <!-- Highlights Section -->
      {gallery.length > 0 && (
        <div class="gallery-section" data-category="gallery">
          <h2 class="text-2xl font-bold text-navy mb-6">Highlights</h2>
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {gallery.map((image) => (
              <figure class="gallery-item group relative overflow-hidden rounded-xl bg-gray-100 aspect-[4/3]" data-category="gallery">
                <Image
                  src={image.src}
                  alt={image.alt}
                  widths={[400, 600, 800]}
                  sizes="(max-width: 640px) 100vw, (max-width: 1024px) 50vw, 33vw"
                  class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                  format="webp"
                  quality={80}
                  loading="lazy"
                />
              </figure>
            ))}
          </div>
        </div>
      )}

      {gallery.length === 0 && team.length === 0 && robots.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-600">Gallery coming soon!</p>
        </div>
      )}
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <h2 class="text-2xl font-bold mb-4">Follow Our Journey</h2>
      <p class="text-gray-600 mb-6">See more photos and videos on our social media.</p>
      <div class="flex justify-center gap-4">
